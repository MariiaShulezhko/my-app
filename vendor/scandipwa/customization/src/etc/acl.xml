<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="ScandiPWA_Customization::scandipwa_config" title="ScandiPWA">
                                <resource
                                    id="ScandiPWA_Customization::content_customization"
                                    title="Content customization"
                                />
                                <resource
                                    id="ScandiPWA_Customization::color_customization"
                                    title="Color customization"
                                />
                                <resource
                                    id="ScandiPWA_Customization::layout_direction"
                                    title="Layout direction"
                                />
                            </resource>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
